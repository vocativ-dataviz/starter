@import "reset.styl"

/*  Color variables
  ------------------  */

$fontcolor = #333333
$bgcolor = #e6e6e6

/* Highlight color, when user selects text */
$highlight = #FFF9A2

/* Link color, hover/visited will be generated from this */
$linkcolor = #112582

/* Selection colours (easy to forget) */
::selection     {background: $highlight}
::-moz-selection  {background: $highlight}
img::selection    {background: transparent}
img::-moz-selection {background: transparent}
body {-webkit-tap-highlight-color: $highlight}

em { background: rgba($highlight, 0.5) }

@import "typography.styl"





body
  font normal 100% "Franklin Gothic Medium", "Franklin Gothic", "ITC Franklin Gothic", 'Helvetica Neue', Helvetica, Arial, sans-serif
  line-height 1.45em
  font-size 1.2em
  max-width 896px
  //width 65%
  padding 32px 48px 84px
  background $bgcolor
  color $fontcolor
  -webkit-text-size-adjust 100% /* Stops Mobile Safari from auto-adjusting font-sizes */
  margin-left auto
  margin-right auto

p
  margin 0.6em 0

a
  &:link
    color $linkcolor

  &:hover
    color $linkcolor

  &:visited
    color $linkcolor

section
  margin 12px 0

  &:last-child
    margin-bottom 0








// Tablet Layout
@media only screen and (min-width: 768px) and (max-width: 991px)
  body
    max-width 712px
    width 80%
    font-size 1.1em









// Mobile Layout
@media only screen and (max-width: 767px)
  body
    padding 8px
    margin 0
    max-width 100%
    width 100%
    font-size 0.9em
    line-height 1.5em





// Buttons
button
  position relative
  font-family Helvetica
  font-size 14px
  font-weight bold
  background-color #dedede
  color #262E31
  border none
  outline none
  width auto
  height 34px
  padding 0 15px
  line-height 30px
  cursor pointer
  box-shadow inset rgba(0,0,0,.2) 0 -2px 0
  border-radius 2px
  margin 2px


button:hover
  border none
  outline none
  background #e6e6e6


button:active, button.selected 
  color #0072BC
  background-color #d6d6d6
  top 1px
  box-shadow inset rgba(0,0,0,.2) 0 2px 0