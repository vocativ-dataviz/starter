@import 'nib'
@import "reset.styl"

/*  Color variables
  ------------------  */

$fontcolor = #333333
$bgcolor = white

/* Highlight color, when user selects text */
$highlight = #FFF9A2

/* Link color, hover/visited will be generated from this */
$linkcolor = #112582

/* Selection colours (easy to forget) */
::selection     {background: $highlight}
::-moz-selection  {background: $highlight}
img::selection    {background: transparent}
img::-moz-selection {background: transparent}
body {-webkit-tap-highlight-color: $highlight}

em { background: rgba($highlight, 0.5) }

@import "typography.styl"

body
  background $bgcolor
  color $fontcolor
  -webkit-text-size-adjust 100% /* Stops Mobile Safari from auto-adjusting font-sizes */

#container
  background $bgcolor
  color $fontcolor
  line-height 1.45em
  font-size 1.2em
  //max-width 960px
  max-width 650px
  padding 32px 48px 84px
  margin-left auto
  margin-right auto

#content
  min-height 600px

p
  margin 0.6em 0

a
  &:link
    color $linkcolor

  &:hover
    color $linkcolor

  &:visited
    color $linkcolor

section
  margin 12px 0

  &:last-child
    margin-bottom 0

$buttonSize = 48px

#data-sources
  margin 0
  background-color #e0e0e0
  padding 0.8em
  text-align right
  transition all 0.3s ease-in-out
  position absolute
  z-index 1 !important
  width 100%
  top -500px
  left 0
  background-image url(img/data-icon.svg)
  background-position 98% center
  background-size contain
  background-repeat no-repeat

  a:link,a:hover,a:visited
    color #222222

  p
    max-width 82%
    margin-left auto
    margin-right auto

.data-active
  top $buttonSize !important


nav#topbar
  z-index 100 !important
  height $buttonSize
  background-color #404040
  color white
  width 100%
  padding 0.25em

  ul
    position absolute
    right 0
    top 0
    z-index 10

    li
      z-index 10
      opacity 0.9
      background-color #6c6c6c
      cursor pointer
      display inline-block
      width $buttonSize
      height $buttonSize
      padding 4px
      padding-left 5px
      border-left 1px solid white


      transition 0.07s all ease-in-out

      &:hover
        background-color #222222
        opacity 1

  h2
    font-size 1.4em
    display inline-block
    margin-left 0.25em
    margin-top 0.12em



// Mobile Layout
@media only screen and (max-width: 649px)
  #container
    padding 8px
    margin 0
    max-width 100%
    width 100%
    font-size 0.9em
    line-height 1.5em

  #content
    min-height 300px